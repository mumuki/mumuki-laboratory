<!DOCTYPE html>
<html>
<head>
  <title>Mumuki - <%= t :mumuki_catchphrase %></title>

  <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96">
  <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">

  <meta name="description" content="<%= t :mumuki_short_description %>"/>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="<%= root_path %>">Mumuki</a>
    </div>

    <ul class="nav navbar-nav navbar-left">
      <li><a href="<%= categories_path %>"><%= t(:category).pluralize %></a></li>
      <li><a href="<%= guides_path %>"><%= t(:guide).pluralize %></a></li>
      <li><a href="<%= exercises_path %>"><%= t(:exercise).pluralize %></a></li>
    </ul>

    <ul class="nav navbar-nav navbar-right">
      <% if current_user? %>
        <div class="navbar-text profile-image-nav">
          <%= link_to image_tag(current_user.image_url, height: 40, class: 'img-circle'), user_path(current_user) %>
        </div>
        <li><%= link_to current_user.name, user_path(current_user) %></li>
        <li><%= link_to(t(:sign_out), logout_path) %></li>
      <% else %>
        <li><a href="#" data-toggle="modal" data-target="#login-modal"><%= t(:sign_in_with_github) %></a></li>
      <% end %>
    </ul>
  </div>
</div>

<%= yield :no_container %>

<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title text-center" id="gridSystemModalLabel">Login</h4>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-6 text-center">
              <%= link_to(t(:sign_in_with_facebook), login_path) %>
            </div>
            <div class="col-md-6 text-center">
              <%= link_to(t(:sign_in_with_github), login_path) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container" id="wrap">
  <div class="row">
    <% if notice %>
        <div class="alert alert-success" role="alert">
          <%= notice.html_safe %>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    <% elsif alert %>
        <div class="alert alert-danger" role="alert">
          <%= alert.html_safe %>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    <% end %>
  </div>

  <%= yield %>

</div>

<footer class="footer">
  <div class="container">
      <hr>
    <div class="row">
      <div class="col-md-9">
      <p>&copy; Copyright 2015 Mumuki. With help from <a href="http://www.uqbar-project.org/">Uqbar-Project</a></p>
      </div>
      <div class="col-md-3 text-right">
        <a href="https://twitter.com/MumukiPlatform" class="twitter-follow-button" data-show-count="false">Follow @MumukiPlatform</a>
      </div>
    </div>
  </div>
</footer>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<%= javascript_include_tag '//www.google.com/jsapi', 'chartkick' %>
<%= yield :tail %>
<%= yield :charts_js %>
</body>
</html>
